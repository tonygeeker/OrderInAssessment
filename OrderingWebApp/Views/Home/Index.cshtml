@model OrderingWebApp.Models.SearchViewModel
@{
    ViewData["Title"] = "Home Page";
}


<nav role="navigation" class="container-fluid pt-4 pb-4">
    <div class="col-lg-12 pr-1 pl-1">
        @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation" }))
        {
            @Html.AntiForgeryToken()
            <div class="row prepend-styling">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">@Html.LabelFor(model => model.FoodItem, htmlAttributes: new { @class = "m-0" })</span>
                    </div>
                    @Html.EditorFor(model => model.FoodItem, new { htmlAttributes = new { @class = "form-control", @placeholder = "Food item" } })
                    @Html.ValidationMessageFor(model => model.FoodItem, "", new { @class = "text-danger pl-2" })
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">@Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "m-0" })</span>
                    </div>
                    @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", @placeholder = "Location"} })
                    @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger pl-2" })
                </div>
                <div class="form-group usernameLoginType"></div>
            </div>
            <div class="row">
                <div class="col p-0">
                    <button class="btn btn-primary" type="submit"><i class="fas fa-check fa-fw"></i> Search </button>
                    
                    <div class="text-danger small pt-2">@ViewBag.Error</div>
                </div>
            </div>
        }
    </div>
</nav>